{
  "name": "ldap.ui",
  "version": "0.0.1",
  "description": "A minimalistic web UI to browse and query LDAP servers",
  "author": "Martin Rohrmeier <roryphant@gmail.com> (oyo)",
  "license": "MIT",
  "type": "module",
  "main": "dist/ldap.ui.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oyo/ldap.ui.git"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.5",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-love": "^43.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --quiet --fix"
    ],
    "*.{json,css,sass,scss,xml,yml,yaml,html,md}": [
      "prettier --write --ignore-unknown"
    ],
    "*.test.{js,jsx,ts,tsx}": [
      "jest"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "dev": "vite --port 8000",
    "build": "tsc && vite build && mkdirp build/ldap/ui/ && mv build/assets build/*.* build/ldap/ui/",
    "preview": "vite preview",
    "pretty": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,sass,scss,xml,yml,yaml,html,md}\"",
    "pretty:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,sass,scss,xml,yml,yaml,html,md}\"",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-pattern \"{build,dist}/**/*\" --report-unused-disable-directives --max-warnings 0",
    "test": "jest"
  }
}
